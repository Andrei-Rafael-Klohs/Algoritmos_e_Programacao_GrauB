#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main()
{
    int vetorA[5];
    int produto=1;

    //Leitura de dados  
    printf("Vamos iniciar com a leitura de números\n");

    for(int i = 0; i<5; i++)
    {
        printf("Digite um número, por gentileza: ");
        scanf("%d",&vetorA[i]);

    }

    printf("\n");

    //Faz o cálculo
    printf("o produto do seu vetor multiplicado pela posição é a seguinte:\n ");

    for(int i=0; i<5;i++)
    {
        produto=vetorA[i]*i;
        printf("%d\n",produto);
    }

    

    return 0;
}
